<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl"><%= t("Consume ") + @inventory.product.name %></h1>
  <h2 class="text-2xl"><%= t("Left") %>: <%= format_number(@inventory.left_quantity) %> <%= @inventory.unit.name %></h2>

  <%= render "form", inventory: @inventory, consume_history: @consume_history %>

  <%= link_to 'Back to inventory', inventory_path(@inventory), class: "btn-secondary block w-full sm:w-fit mt-2 text-center" %>
</div>
