<% if @consume_histories.present? %>
  <table class="table-auto w-full">
    <thead>
      <tr class="text-left">
        <th><%= t(".consumed_on") %></th>
        <th><%= t(".quantity") %></th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <%= render @consume_histories %> 
    </tbody>
  </table>
<% else %>
  <p class="text-center"><%= t(".no_consumption") %></p>
<% end %>

