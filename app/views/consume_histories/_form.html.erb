<%= form_with(model: consume_history, class: "contents") do |form| %>
  <% if consume_history.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(consume_history.errors.count, "error") %> prohibited this consume_history from being saved:</h2>

      <ul>
        <% consume_history.errors.each do |error| %>
