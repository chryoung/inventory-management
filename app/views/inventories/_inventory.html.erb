<div id="<%= dom_id inventory %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Item:</strong>
    <%= inventory.item.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Quantity:</strong>
    <%= inventory.quantity %> <%= inventory.unit.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">In stock on:</strong>
    <%= inventory.in_stock_on %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Produced on:</strong>
    <%= inventory.produced_on %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Shelf life:</strong>
    <%= inventory.shelf_life %> <%= inventory.shelf_life_unit %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Expire on:</strong>
    <%= inventory.expire_on %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this inventory", inventory, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this inventory', edit_inventory_path(inventory), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
