<div id="<%= dom_id inventory %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Item:</strong>
    <%= inventory.Item_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Quantity:</strong>
    <%= inventory.Quantity %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Unit:</strong>
    <%= inventory.Unit_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Instockon:</strong>
    <%= inventory.InStockOn %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Producedon:</strong>
    <%= inventory.ProducedOn %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Shelflife:</strong>
    <%= inventory.ShelfLife %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Expireon:</strong>
    <%= inventory.ExpireOn %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this inventory", inventory, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this inventory', edit_inventory_path(inventory), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
