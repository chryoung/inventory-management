<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-end">
    <%= link_to 'Add', new_inventory_path, class: "btn-primary block" %>
  </div>

  <table class="data-table">
    <thead class="data-header">
      <tr>
        <th class="data-cell">Item</th>
        <th class="data-cell">Quantity</th>
        <th class="data-cell-sm">Storage</th>
        <th class="data-cell-sm">Price per unit</th>
        <th class="data-cell-sm">In stock on</th>
        <th class="data-cell-sm">Produced on</th>
        <th class="data-cell-sm">Shelf life</th>
        <th class="data-cell-sm">Expire on</th>
      </tr>
    </thead>
    <tbody>
      <%= render @inventories %>
    </tbody>
  </table>
</div>
