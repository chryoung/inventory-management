<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between">
    <div class="group">
      <button data-inventory-index-type-target="typeButton" class="btn-primary cursor-default w-40"><%= index_type %></button>
      <ul class="hidden absolute drop-shadow-md z-10 group-hover:block divide-y divide-teal-300 justify-center text-slate-500 w-40 pt-1">
        <li><%= link_to t("In Stock"), inventories_url, class: "block bg-teal-100/90 hover:bg-teal-300/90 rounded-t-md text-center p-2" %></li>
        <li><%= link_to t("Out of Stock"), inventories_url(exhausted: "1"), class: "block bg-teal-100 hover:bg-teal-300 text-center p-2" %></li>
        <li><%= link_to t("All"), inventories_url(all: "1"), class: "block bg-teal-100 hover:bg-teal-300 rounded-b-md text-center p-2" %></li>
      </ul>
    </div>
    <%= link_to 'Add', new_inventory_path, class: "btn-primary block" %>
  </div>

  <table class="data-table">
    <thead class="data-header">
      <tr>
        <th class="data-header-cell">Item</th>
        <th class="data-header-cell">Quantity</th>
        <th class="data-header-cell hidden md:table-cell">Storage</th>
        <th class="data-header-cell hidden lg:table-cell">In stock on</th>
        <th class="data-header-cell hidden lg:table-cell">Produced on</th>
        <th class="data-header-cell hidden lg:table-cell">Shelf life</th>
        <th class="data-header-cell hidden md:table-cell">Expire on</th>
        <th class="data-header-cell"></th>
        <th class="data-header-cell"></th>
      </tr>
    </thead>
    <tbody>
      <% @inventories.each do |inventory| %>
        <% cache inventory do %>
          <tr class="hover:bg-teal-300">
            <td class="data-cell">
              <%= link_to inventory_path(inventory), class: "link-primary" do %>
                <%= render partial: "products/variant", locals: { product: inventory.product } %>
              <% end %>
            </td>
            <td class="data-cell">
              <span class=<%= quantity_style inventory %>>
                <%= render partial: "quantity", locals: { inventory: inventory } %>
              </span>
            </td>
            <td class="data-cell hidden md:table-cell"><%= inventory.storage.location %></td>
            <td class="data-cell hidden lg:table-cell"><%= inventory.in_stock_on %></td>
            <td class="data-cell hidden lg:table-cell"><%= inventory.produced_on %></td>
            <td class="data-cell hidden lg:table-cell">
              <%= render partial: "shelf_life", locals: { inventory: inventory } %>
            </td>
            <td class="data-cell hidden md:table-cell"><%= inventory.expire_on %></td>
            <td class="data-cell">
              <%= link_to new_inventory_consume_history_path(inventory), class: "hover:text-sky-500" do %>
                <i class="fa-solid fa-drumstick-bite"></i>
              <% end %>
            </td>
            <td class="data-cell">
              <%= link_to edit_inventory_path(inventory), class: "hover:text-sky-500" do %>
                <i class="fa-solid fa-pen"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
