<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @inventory %>

    <div class="flex flex-col">
      <%= link_to 'Edit this inventory', edit_inventory_path(@inventory), class: "btn-secondary block mb-2" %>

      <%= link_to 'Destroy this inventory', inventory_path(@inventory), class: "btn-secondary block mb-2", data: { turbo_method: :delete } %>

      <%= link_to 'Add', new_inventory_path, class: "btn-primary block mb-2" %>

      <%= link_to 'Back to inventories', inventories_path, class: "btn-secondary block" %>
    </div>
  </div>
</div>
