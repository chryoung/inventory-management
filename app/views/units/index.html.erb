<div class="w-full">
  <%= render "layouts/notice" %>

  <div class="flex justify-end units-center">
    <%= link_to 'New unit', new_unit_path, class: "btn-primary mt-5" %>
  </div>

  <div id="units" class="max-w-sm mx-auto">
    <ul>
      <% @units.each do |unit| %>
        <li id="<%= dom_id unit %>" class="py-2 border-b-2 last:border-b-0 border-teal-100 hover:bg-teal-100 flex justify-between">
          <%= link_to unit.name, unit_path(unit), class: "text-sky-500 hover:text-sky-700 block" %>
          <%= link_to 'Ã—', unit_path(unit), data: { turbo_method: :delete }, class: "text-red-500 hover:text-white hover:bg-red-500 hover:rounded-circle px-2 block" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
