<%= form_with(model: item, class: "contents") do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "btn-primary w-full sm:w-fit mb-2 sm:mb-0" %>
  </div>

  <% if action_name != "edit" %>
    <div class="w-full sm:w-fit">
      <%= form.submit t("items.form.create_and_continue"), formaction: items_create_and_continue_path, class: "btn-secondary w-full" %>
    </div>
  <% end %>
<% end %>
