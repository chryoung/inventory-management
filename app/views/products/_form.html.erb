<%= form_with(model: product, class: "contents") do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :item_id %>
    <%= form.collection_select :item_id, Item.all, :id, :name, {}, data: { controller: "ts--select" } %>
  </div>

  <div class="my-5">
    <%= form.label :variant %>
    <%= form.text_field :variant, class: "form-input w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "btn-primary cursor-pointer" %>
  </div>
<% end %>
