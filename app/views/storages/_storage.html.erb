<div id="<%= dom_id storage %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Location:</strong>
    <%= storage.location %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this storage", storage, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this storage', edit_storage_path(storage), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
